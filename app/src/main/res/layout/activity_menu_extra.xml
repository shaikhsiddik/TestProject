<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuExtra">
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/empty_directory_hint">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/empty_directory_hint"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/ll"
                android:background="@drawable/button_bg"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/contact1"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_toRightOf="@id/notification"
                    android:src="@drawable/contact_yellow" />

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="4dp"
                    android:gravity="left"
                    android:text="Contact"
                    android:textColor="@color/cardview_dark_background"
                    android:textColorLink="@color/cardview_dark_background"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/button_bg"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/contact11"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/logout_ico_yellow" />

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="4dp"
                    android:gravity="left"
                    android:text="Log Out"
                    android:textColor="@color/cardview_dark_background"
                    android:textColorLink="@color/cardview_dark_background"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#05364c"
        android:minHeight="20dp">
        <ImageView
            android:id="@+id/home_c"
            android:layout_width="36dp"
            android:layout_height="33dp"
            android:layout_marginLeft="14dp"
            android:src="@drawable/home_yellow_new" />
        <ImageView
            android:id="@+id/learn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@id/home_c"
            android:src="@drawable/learn_white_new" />

        <ImageView
            android:id="@+id/feeds"
            android:layout_width="36dp"
            android:layout_height="34dp"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@id/learn"
            android:src="@drawable/feeds_white_new" />
        <ImageView
            android:id="@+id/notification"
            android:layout_width="36dp"
            android:layout_height="33dp"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@id/feeds"
            android:src="@drawable/notification_white_new" />

        <ImageView
            android:id="@+id/contact"
            android:layout_width="36dp"
            android:layout_height="35dp"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@id/notification"
            android:src="@drawable/contact_white_new" />

        <ImageView
            android:id="@+id/logout"
            android:layout_width="35dp"
            android:layout_height="33dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="1dp"
            android:onClick="logout"
            android:layout_toRightOf="@id/contact"
            android:src="@drawable/logout_icon" />
        <!--<ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/icons_feeds" />
-->
    </RelativeLayout>
</LinearLayout>


</android.support.constraint.ConstraintLayout>