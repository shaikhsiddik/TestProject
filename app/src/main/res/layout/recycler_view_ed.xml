<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/view_foreground_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@android:color/white"
        android:layout_alignParentTop="true">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            card_view:cardCornerRadius="4dp">
            <LinearLayout
                android:id="@+id/l_ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/l1_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="6dp">

                    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/thumbnail1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="@dimen/activity_padding_horizontal"
                        card_view:cardCornerRadius="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp">

                        <ImageView
                            android:id="@+id/thumbnail_img"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginRight="@dimen/activity_padding_horizontal"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_money" />
                    </android.support.v7.widget.CardView>
                    <TextView
                        android:id="@+id/uname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|fill_vertical"
                        android:paddingLeft="10dp"
                        android:layout_marginEnd="20dp"
                        android:text="Symbol"
                        android:textColor="@color/cardview_dark_background"
                        android:textStyle="bold"
                        android:background="@drawable/bg_bottom_border"/>
                    <TextView
                        android:id="@+id/c1r3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|fill_vertical"
                        android:paddingLeft="10dp"
                        android:layout_marginEnd="20dp"
                        android:text=""
                        android:textColor="@color/cardview_dark_background"
                        android:textStyle="bold"
                        android:background="@drawable/bg_bottom_border"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/l11_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="6dp">

                    <TextView
                        android:id="@+id/stop_loss"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|fill_vertical"
                        android:paddingLeft="10dp"
                        android:layout_marginEnd="20dp"
                        android:text=""
                        android:textColor="@color/cardview_dark_background"
                        android:textStyle="bold"
                        android:background="@drawable/bg_bottom_border"/>
                    <TextView
                        android:id="@+id/c1r2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|fill_vertical"
                        android:paddingLeft="10dp"
                        android:layout_marginEnd="20dp"
                        android:text=""
                        android:textColor="@color/cardview_dark_background"
                        android:textStyle="bold"
                        android:background="@drawable/bg_bottom_border"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="2dp"
                    android:paddingBottom="6dp">
                    <TextView
                        android:id="@+id/c2r2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|fill_vertical"
                        android:paddingLeft="10dp"
                        android:layout_marginEnd="20dp"
                        android:text=""
                        android:textColor="@color/cardview_dark_background"
                        android:textStyle="bold"
                        android:background="@drawable/bg_bottom_border"/>
                    <TextView
                        android:id="@+id/c3r2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|fill_vertical"
                        android:paddingLeft="10dp"
                        android:layout_marginEnd="20dp"
                        android:text=""
                        android:textColor="@color/cardview_dark_background"
                        android:textStyle="bold"
                        android:background="@drawable/bg_bottom_border"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="2dp"
                    android:paddingBottom="6dp">

                    <TextView
                        android:id="@+id/c1r4"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:paddingLeft="10dp"
                        android:textSize="12dp"
                        android:text=""
                        android:textColor="@color/cardview_dark_background" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="2dp"
                    android:paddingBottom="6dp">

                    <TextView
                        android:id="@+id/c2r3"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:paddingLeft="10dp"
                        android:textSize="12dp"
                        android:text=""
                        android:textColor="@color/cardview_dark_background" />

                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</FrameLayout>