<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.BlueshoreFinancial.clientapp3.TwoFragment"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="false"
        android:layout_marginTop="100dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#B9C7E3"
                android:gravity="left|center_vertical"
                android:text="SCRIP"
                android:textColor="@color/cardview_dark_background"
                android:paddingLeft="10dp"/>
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#B9C7E3"
                android:gravity="center_vertical|center_horizontal"
                android:text="QTY"
                android:textColor="@color/cardview_dark_background" />
            <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#B9C7E3"
            android:gravity="center_vertical|center_horizontal"
            android:text="LTP"
            android:textColor="@color/cardview_dark_background" />
            <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#B9C7E3"
            android:gravity="center_vertical|center_horizontal"
            android:text="VALUE"
            android:textColor="@color/cardview_dark_background" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_b"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#32A73E"
                    android:gravity="center"
                    android:text="Investment Value"
                    android:textSize="10dp"
                    android:textColor="@color/cardview_light_background"
                    android:paddingLeft="10dp"/>
                <TextView
                    android:id="@+id/textView1_b"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#32A73E"
                    android:gravity="center"
                    android:text="Current Value"
                    android:textSize="10dp"
                    android:textColor="@color/cardview_light_background" />
                <TextView
                    android:id="@+id/textView2_b"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#32A73E"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:text="@string/text"
                    android:textColor="@color/cardview_light_background" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/textView_data"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#32A73E"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textColor="@color/cardview_light_background"
                    android:paddingLeft="10dp"
                    android:paddingBottom="2dp"/>
                <TextView
                    android:id="@+id/textView1_data"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#32A73E"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:paddingBottom="2dp"
                    android:textColor="@color/cardview_light_background" />
                <TextView
                    android:id="@+id/textView2_data"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#32A73E"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textColor="@color/cardview_light_background" />
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>
