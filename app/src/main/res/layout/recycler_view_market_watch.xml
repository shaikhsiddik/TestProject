<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/view_foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:background="@android:color/white"
        >

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            card_view:cardCornerRadius="4dp">
            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="6dp">

                    <TextView
                        android:id="@+id/scrip_market"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:paddingLeft="10dp"
                        android:text="SCRIP"
                        android:textColor="#9EC3D8"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/ltp_market"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="LTP"
                        android:layout_marginRight="35dp"
                        android:textColor="#32A73E" />
                    <TextView
                        android:id="@+id/value_market"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="CHANGE"
                        android:textColor="@color/cardview_dark_background" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="2dp"
                    android:paddingBottom="6dp">

                    <TextView
                        android:id="@+id/scrip1_market"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.05"
                        android:gravity="left"
                        android:paddingLeft="10dp"
                        android:text="NSE"
                        android:textSize="10dp"
                        android:textColor="@color/cardview_dark_background" />
                    <TextView
                        android:id="@+id/ltp1_market"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text=""
                        android:textColor="@color/cardview_dark_background" />
                    <TextView
                        android:id="@+id/change1_market"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.05"
                        android:gravity="center"
                        android:text="0.00%"
                        android:layout_marginRight="15dp"
                        android:textSize="10dp"
                        android:textColor="#32A73E" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</FrameLayout>